{
   "compilerOptions": {
      "allowJs": true,
      "emitDecoratorMetadata": true,
      "lib": ["deno.window"],
      "strict": true
   },
   "importMap": "import_map.json",
   "lint": {
     "files": {
       "include": ["src/"]
     },
     "rules": {
       "tags": ["recommended"],
       "include": ["ban-untagged-todo"],
       "exclude": ["no-unused-vars"]
     }
   },
   "fmt": {
     "files": {
       "include": ["src/"]
     },
     "options": {
       "useTabs": true,
       "lineWidth": 80,
       "indentWidth": 4,
       "singleQuote": true,
       "proseWrap": "preserve"
     }
   },
   "test": {
     "files": {
       "include": ["test/"]
     }
   }
}